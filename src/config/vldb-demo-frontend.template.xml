<?xml version="1.0" encoding="utf-8"?>
<myriad xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.dima.tu-berlin.de/myriad/frontend">
  
  <!-- a set of cloud environments -->
  <cloud-environments>
    <cloud-env id="localhost" dgen="/path/to/dgen/install/dir">
      <master>
        <host name="localhost" />
      </master>
      <slaves>
        <host name="localhost" />
      </slaves>
    </cloud-env>
  </cloud-environments>
  
  <!-- a set of data generator environments -->
  <dgen-configurations>
    <dgen-config id="localhost-x1" cloud="localhost">
      <nodes-per-host>1</nodes-per-host>
      <output-base>/path/to/data</output-base>
    </dgen-config>
    
    <dgen-config id="localhost-x2" cloud="localhost">
      <nodes-per-host>2</nodes-per-host>
      <output-base>/path/to/data</output-base>
    </dgen-config>
    
    <dgen-config id="localhost-x4" cloud="localhost">
      <nodes-per-host>4</nodes-per-host>
      <output-base>/path/to/data</output-base>
    </dgen-config>
  </dgen-configurations>
</myriad>
